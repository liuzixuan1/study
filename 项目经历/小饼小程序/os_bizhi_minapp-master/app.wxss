page {
  height: 100%;
}

.pageContainer {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  box-sizing: border-box;
}

.flex {
  display: flex;
}

.flex-wrap {
  flex-wrap: wrap;
}

.flex-col {
  display: flex;
  flex-direction: column;
}

.flex-row {
  display: flex;
  flex-direction: row;
}


/* 遮罩层弹窗相关 */

.cover_view {
  position: fixed;
  width: 100%;
  height: 100%;
  z-index: 100;
  background-color: rgba(124,124,124,0.5);
  top: 0px;
  justify-content: center;
  align-items: center;
}

.cover_view .cover_box {
  position: relative;
  align-items: center;
  justify-content: flex-start;
}

.cover_box .box_main {
  position: absolute;
  top: 0px;
  justify-content: center;
}

.cover_view .img_close {
  width: 60rpx;
  height: 60rpx;
  margin-top: 70rpx;
}

/* 新增样式 */

.hr-line {
  height: 14rpx;
  width: 100%;
  background-color: #f7f9fc;
}

.user_wxlogin_view {
  width: 520rpx;
  height: 300rpx;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 20rpx;
  border: 2rpx solid #e6e5e5;
  justify-content: center;
  align-items: center;
}

.user_wxlogin_view text {
  margin-top: 20rpx;
  font-size: 26rpx;
  color: rgb(80, 78, 78);
  text-align: center;
}

.user_wxlogin_view button {
  background-color: #56cc56;
  width: 420rpx;
  border-radius: 36rpx;
  color: #fff;
  font-size: 32rpx;
  padding: 0px;
}

view.tipview {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 22rpx;
  width: 100%;
  margin-top: 10rpx;
}

view.tip_panel_view {
  justify-content: center;
  align-items: center;
  height: 100%;
  width: 100%;
}

view.tip_panel_view text {
  margin-top: 20rpx;
  font-size: 26rpx;
}

view.tip_panel_view image {
  width: 200rpx;
  height: 130rpx;
}

.page_info{
  display: none;
}

/* 广告样式 */
.banner_ad{
  height: auto;
  max-height: 400rpx;
}

.video_ad{
  height: auto;
  width: 100%;
}

.video_ad video{
  width: 100%;
  margin: 20rpx 0px;
}

.dm_img {
  position: fixed;
  z-index: 1;
  right: 20px;
  bottom: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.dm_img image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 100%;
}

.dm_img text {
  color: #000;
  font-size: 22rpx;
}